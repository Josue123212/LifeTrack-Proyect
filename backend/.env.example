# =============================================================================
# CONFIGURACIÓN DE ENTORNO - SISTEMA DE CITAS MÉDICAS
# =============================================================================
# Copia este archivo como .env y configura las variables según tu entorno

# =============================================================================
# CONFIGURACIÓN BÁSICA DE DJANGO
# =============================================================================
# Clave secreta de Django (genera una nueva para producción)
SECRET_KEY=your-super-secret-key-here-change-in-production

# Modo debug (True para desarrollo, False para producción)
DEBUG=True

# Hosts permitidos (separados por comas)
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# =============================================================================
# CONFIGURACIÓN DE BASE DE DATOS
# =============================================================================
# Para desarrollo (SQLite)
DB_ENGINE=django.db.backends.sqlite3
DB_NAME=db.sqlite3

# Para producción (PostgreSQL) - descomenta y configura
# DB_ENGINE=django.db.backends.postgresql
# DB_NAME=medical_appointments_db
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password
# DB_HOST=localhost
# DB_PORT=5432

# =============================================================================
# CONFIGURACIÓN DE SEGURIDAD (PRODUCCIÓN)
# =============================================================================
# Redirección SSL (True para producción con HTTPS)
SECURE_SSL_REDIRECT=False

# =============================================================================
# CONFIGURACIÓN DE EMAIL
# =============================================================================
# Configuración SMTP para envío de emails
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@your-domain.com

# =============================================================================
# CONFIGURACIÓN DE CACHE (REDIS)
# =============================================================================
# URL de Redis para cache en producción
REDIS_URL=redis://127.0.0.1:6379/1

# =============================================================================
# CONFIGURACIÓN DE CORS
# =============================================================================
# URLs del frontend permitidas (separadas por comas)
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000,http://localhost:5173,http://127.0.0.1:5173

# =============================================================================
# CONFIGURACIÓN DE JWT
# =============================================================================
# Tiempo de vida de los tokens JWT (en minutos)
JWT_ACCESS_TOKEN_LIFETIME=15
JWT_REFRESH_TOKEN_LIFETIME=1440

# =============================================================================
# CONFIGURACIÓN DE CELERY (TAREAS ASÍNCRONAS)
# =============================================================================
# URL del broker para Celery (Redis)
CELERY_BROKER_URL=redis://127.0.0.1:6379/0
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/0

# =============================================================================
# CONFIGURACIÓN DE ARCHIVOS ESTÁTICOS Y MEDIA
# =============================================================================
# URL base para archivos estáticos en producción
STATIC_URL=/static/
MEDIA_URL=/media/

# =============================================================================
# CONFIGURACIÓN DE LOGGING
# =============================================================================
# Nivel de logging (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# =============================================================================
# CONFIGURACIÓN DE GOOGLE OAUTH (OPCIONAL)
# =============================================================================
# Credenciales de Google OAuth para autenticación social
# GOOGLE_OAUTH2_CLIENT_ID=your-google-client-id
# GOOGLE_OAUTH2_CLIENT_SECRET=your-google-client-secret

# =============================================================================
# CONFIGURACIÓN DE DESARROLLO
# =============================================================================
# Variables específicas para desarrollo local
DJANGO_SETTINGS_MODULE=config.settings.development